<%= javascript_include_tag "pacients" %>
<%= stylesheet_link_tag "pacients" %>
<div id="pagina" >
<%= simple_form_for(@pacient) do |f| %>
<h1>Pacient nou </h1>
  <% if @pacient.errors.any? %>
    <div id="error_explanation">
      <h2> Unele date ale pacientului <%= @pacient.nume %> sunt introduse greşit.<br />
      Ai <%= @pacient.errors.count%> erori:  </h2>

      <ul>
      <% @pacient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nume %>
    <%= f.text_field :nume %>
  </div>
  <div class="field">
    <%= f.label :prenume %>
    <%= f.text_field :prenume %>
  </div>
  <div class="field">
    <%= f.label :cnp %>
    <%= f.text_field :cnp %>
  </div>
  <div class="field">
    <%= f.label :telefon1 %>
    <%= f.text_field :telefon1 %>
  </div>
  <div class="field">
    <%= f.label :telefon2 %>
    <%= f.text_field :telefon2 %>
  </div>
  <div class="field">
    <%= f.label :adresa %><br />
    <%= f.text_area :adresa, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :data_dg_ckd %>
    <%= f.text_field :data_dg_ckd %>
  </div>
  <div class="field">
    <%= f.label :data_dg_diabet %>
    <%= f.text_field :data_dg_diabet, :include_blank => true %>
  </div>
  <div class="field">
    <%# f.label :centru %>
    <%# f.select :centru, Pacient::CENTRE, :as => :radio %>
    <%= f.input :centru, :collection => Pacient::CENTRE, :as => :radio %>
  </div>
  <%= link_to 'Printează un inform consent', consent_pacients_path(:format => 'pdf'), :method => :get %>

    <%= f.input :semnat_icf, :label => "Bifează dacă pacientul a semnat inform consentul", :as => :boolean %>
  <div class="actions">
    <%= f.submit 'Adaugă pacient' %>
  </div>
<% end %>
</div>
